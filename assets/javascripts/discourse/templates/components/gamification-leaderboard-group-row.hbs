<div class="rank-row" id="leaderboard-group-{{group.id}}">
  <div class="rank-row__rank">{{sum index 4}}</div>
  <div class="rank-row__flair" role="button">
    {{gamification-leaderboard-group-flair group=group}}
    <span class="rank-row__name">{{group.name}}</span>
  </div>

  <div class="rank-row__membership">
    <div class="rank-row__membership-icon">{{d-icon "user"}}</div>
    {{number group.user_count}}
  </div>

  <div class="rank-row__score">
    {{#if site.mobileView}}
      {{number group.total_score}}
    {{else}}
      {{fullnumber group.total_score}}
    {{/if}}
  </div>
</div>